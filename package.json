{
  "name": "research-collab",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "vercel-build": "cd apps/web && npm run build",
    "deploy:vercel-prepare": "npm install && npx turbo run build --filter=\"@research-collab/db\" --filter=\"ui\"",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "dependencies": {
    "@tamagui/animations-css": "^1.94.3",
    "@tamagui/font-inter": "^1.94.3",
    "@tamagui/react-native-media-driver": "^1.94.3",
    "@tamagui/shorthands": "^1.94.3",
    "@tamagui/themes": "^1.94.3",
    "tamagui": "^1.94.3"
  },
  "devDependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^18.11.9",
    "@types/react": "~18.2.14",
    "@types/react-dom": "~18.2.14",
    "@types/react-icons": "^2.2.7",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-turbo": "^2.5.0",
    "parse-unit": "^1.0.1",
    "postcss-import": "^16.0.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.3.0",
    "tailwindcss-font-inter": "^4.0.0",
    "turbo": "^2.5.3",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.29.1"
  },
  "overrides": {
    "turbo": "^2.5.3",
    "turbo-darwin-arm64": "npm:turbo@^2.5.3",
    "turbo-linux-64": "npm:turbo@^2.5.3",
    "turbo-windows-64-x64": "npm:turbo@^2.5.3"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@9.4.0",
  "version": "1.0.0",
  "description": "A modern collaboration platform for researchers to share ideas, find collaborators, join project guilds, and verify ownership of research contributions.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rath300/research-collab.git"
  },
  "keywords": [],
