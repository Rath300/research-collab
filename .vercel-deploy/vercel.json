{
  "version": 2,
  "buildCommand": "cd apps/web && npm install && npm run build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "routes": [
    { "src": "/$", "dest": "/" },
    { "src": "/todo", "dest": "/todo" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/_next/(.*)", "dest": "/_next/$1" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
} 